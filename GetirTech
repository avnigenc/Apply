package developer;

public class Developer {

    public static void main(String[] args) {
        apply(true);
    }
    
    public static void apply(boolean isPassionateAboutTech) {
        if (isPassionateAboutTech) {
            alwaysEager();
            teamPlayer();
            openToNewApproaches();
            doer();
            contactMe("avnignc@gmail.com");
        }
    }

    private static void alwaysEager() {
        System.out.println("Learn Eagerly");
    }

    private static void teamPlayer() {
        System.out.println("Work Well In A Team");
    }

    private static void openToNewApproaches() {
        System.out.println("Be Open To New Approaches");
    }

    private static void doer() {
        System.out.println("Be A Doer");
    }

    private static void contactMe(String email) {
        System.out.println(email);
    }
}
